<%- include('partials/header', { title: 'レシピ一覧' }) %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">レシピ一覧</h1>
        <a class="btn btn-outline-light btn-sm btn-primary" href="/recipes/new">新しいレシピを投稿</a>
    </div>

    <div class="row g-3">
        <% if (recipes.length===0) { %>
            <div class="col-12">
                <div class="alert alert-info">まだレシピがありません。最初のレシピを投稿しましょう！</div>
            </div>
            <% } %>
                <% recipes.forEach(recipe=> { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <%= recipe.title %>
                                </h5>
                                <p class="card-text text-truncate">
                                    <%= recipe.description %>
                                </p>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <a href="/recipes/<%= recipe.id %>" class="btn btn-sm btn-outline-primary">見る</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
    </div>

    <%- include('partials/footer') %>