<%- include('partials/header', { title: '新しいレシピ' }) %>

    <div class="card">
        <div class="card-body">
            <h2 class="h4 mb-3">新しいレシピを投稿</h2>
            <form action="/recipes" method="post">
                <div class="mb-3">
                    <label class="form-label">タイトル</label>
                    <input name="title" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">説明</label>
                    <textarea name="description" class="form-control" rows="2"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">材料（各行に1つずつ）</label>
                    <textarea name="ingredients" class="form-control" rows="4" placeholder="例:\n卵\n牛乳\n塩"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">作り方（各行に1つずつ）</label>
                    <textarea name="steps" class="form-control" rows="4" placeholder="例:\n卵を溶く\nフライパンで焼く"></textarea>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-primary">投稿</button>
                    <a class="btn btn-secondary" href="/">キャンセル</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>